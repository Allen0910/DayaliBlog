@model List<DayaliBlog.Model.Blog.T_BLOG_CATELOG>
    <blockquote class="layui-elem-quote">分类管理</blockquote>
    <div style="padding: 10px;width: 80%">
        <div>
            <a class="layui-btn" href="/Admin/Categry/Add">
                <i class="layui-icon">&#xe608;</i> 添加
            </a>
        </div>

        <table class="layui-table">
            <thead>
                <tr>
                    <th>分类名称</th>
                    <th>备注</th>
                    <th>管理</th>
                </tr>
            </thead>
            <tbody>
                @foreach (DayaliBlog.Model.Blog.T_BLOG_CATELOG categ in Model)
        {
                    <tr>
                        <td>@categ.CatelogName</td>
                        <td>@categ.Remark</td>
                        <td>
                            <a href="/Admin/Categry/Add/@categ.CatelogID"><i class="layui-icon">&#xe642;</i>编辑</a>
                            <a href="/Admin/Categry/Del/@categ.CatelogID" onclick="return  confirm('确定要删除吗？')"><i class="layui-icon">&#x1006;</i>删除</a>
                        </td>
                    </tr>
        }
            </tbody>
        </table>
    </div>
